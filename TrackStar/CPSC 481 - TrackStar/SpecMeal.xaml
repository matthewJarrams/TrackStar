<Window x:Class="CPSC_481___TrackStar.SpecMeal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC_481___TrackStar"
        mc:Ignorable="d"
        WindowStartupLocation="Manual" 
        Top="0"
        Left="600"
        Title="SpecMeal" Height="700" Width="400">
    <Grid Background="Teal" >
        <Label Content="Meal Plan Overview" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.028,-0.461" FontWeight="Bold" FontSize="18"/>
        <Button x:Name="backBtn" Content="Back" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Height="32" Width="55" BorderBrush ="Red" BorderThickness="5" Background="white" FontWeight="Bold" Click="Back_Button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <ScrollViewer Margin="0,125,0,0">
        <ListBox Margin="10,0,25,45" Name="lvDataBinding" Background="Teal" Width="350" Height="700" BorderBrush ="Coral" BorderThickness="5">
            <ListBox.ItemTemplate>
                <DataTemplate>

                    <WrapPanel>
                        <StackPanel x:Name="catalogueStack"  Background="Teal">
                            <Grid x:Name="cardioGrid" Height="490" Width="320" Background="#008080" >
                                <Button x:Name="setMealPlan" Content="Set Meal Plan" HorizontalAlignment="Center" Margin="30,10,-175,0" VerticalAlignment="Top" Width="100" BorderBrush ="Coral" BorderThickness="5" Background="white" Height="40" Click="setMealPlan_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                                <Label Content ="{Binding Name}" Height="35" Margin="12,10,50,450" FontSize="17" FontWeight="Bold" />
                                <Label Content ="Description:"  Height="30" Width="100" Margin="10,10,230,350" FontSize="13" RenderTransformOrigin="0.49,0.707" FontWeight="Bold"/>
                                <TextBox x:Name="descripBox" BorderBrush ="Coral" BorderThickness="5" IsReadOnly ="True"  HorizontalAlignment="Left" Text="{Binding Description}" TextWrapping="Wrap" Width="300" Height="126" Margin="12,60,-100,250"/>
                                <Label Content ="Goals:" Height="30" FontWeight="Bold" Margin="12,10,250,20" FontSize="14" RenderTransformOrigin="0.49,0.707"/>
                                <TextBox x:Name="goals_box" BorderBrush ="Coral" BorderThickness="5" IsReadOnly ="True"  HorizontalAlignment="Left" Text="{Binding Goals}" TextWrapping="Wrap"  Width="300" Height="67" Margin="12,80,0,0"/>
                                <Label Content ="Suggested Meals:" Height="30" FontWeight="Bold" Margin="12,5,50,-200" FontSize="14" RenderTransformOrigin="0.49,0.707"/>
                                <ScrollViewer HorizontalAlignment="Left" Background="White" Height="125"  Margin="12,80,0,-280"  Width="300" VerticalScrollBarVisibility="Visible">
                                    <TextBox x:Name="meals_box" BorderBrush ="Coral" BorderThickness="5" IsReadOnly ="True"  HorizontalAlignment="Left" Text="{Binding Meals}"  Width="300" Height="125" Margin="0,0,0,0"/>
                                </ScrollViewer>
                                <Label Content ="Suggested Nutritional Info" Height="30" FontWeight="Bold" Margin="10,330,0,-200" FontSize="14" RenderTransformOrigin="0.49,0.707"/>
                                <ScrollViewer HorizontalAlignment="Left" Background="White" Height="125"  Margin="12,400,0,-280"  Width="300" VerticalScrollBarVisibility="Visible">
                                    <TextBox x:Name="targets" BorderBrush ="Coral" BorderThickness="5" IsReadOnly ="True"  HorizontalAlignment="Left" Text="{Binding Targets}"  Width="300" Height="125" Margin="0,0,0,0"/>
                                </ScrollViewer>

                            </Grid>
                        </StackPanel>
                    </WrapPanel>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        </ScrollViewer>
        <ComboBox HorizontalAlignment="Left" Margin="255,72,0,0" VerticalAlignment="Top" Width="120" Height="25">
            <ComboBoxItem x:Name="lowCarb">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="Red">Lose Weight</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="lowCalorie">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="Green">Maintain Weight</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="gainWeight">
                <StackPanel Orientation="Horizontal">

                    <TextBlock Foreground="Teal">Gain Weight</TextBlock>
                </StackPanel>
            </ComboBoxItem>
        </ComboBox>
        <Label Content="Goal" HorizontalAlignment="Left" Margin="190,67,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Width="66" FontFamily="Calibri"/>

    </Grid>
</Window>
