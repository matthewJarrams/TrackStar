<Window x:Class="CPSC_481___TrackStar.SpecMeal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC_481___TrackStar"
        mc:Ignorable="d"
        WindowStartupLocation="Manual" 
        Top="0"
        Left="600"
        Title="SpecMeal" Height="700" Width="400">
    <Grid Background="#FF7F50">
        <Label Content="Meal Plan Overview" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.028,-0.461" FontWeight="Bold" FontSize="18"/>
        <Button x:Name="backBtn" Content="Back" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Height="32" Width="55" Background="#008080" FontWeight="Bold" Click="Back_Button_Click"/>
        <ListView Margin="10,69,10,55" Name="lvDataBinding" Background="Black" Height="500" Width="350">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <StackPanel x:Name="catalogueStack"  Background="White">
                            <Grid x:Name="cardioGrid" Height="490" Width="335" Background="#008080" >
                                <Label Content ="{Binding Name}" Height="30" Margin="12,10,50,450" FontSize="15" Background="White"/>
                                <Label Content ="Description:" Height="30" Width="200" Margin="10,10,250,350" FontSize="13" RenderTransformOrigin="0.49,0.707"/>
                                <TextBox x:Name="descripBox" IsReadOnly ="True"  HorizontalAlignment="Left" Text="{Binding Description}" TextWrapping="Wrap" Width="312" Height="126" Margin="12,60,0,250"/>
                                <Label Content ="Goals:" Height="30" Margin="12,10,250,20" FontSize="14" RenderTransformOrigin="0.49,0.707"/>
                                <TextBox x:Name="goals_box" IsReadOnly ="True"  HorizontalAlignment="Left" Text="{Binding Goals}" TextWrapping="Wrap"  Width="176" Height="67" Margin="12,80,0,0"/>
                                <Label Content ="Suggested Meals:" Height="30" Margin="12,10,50,-200" FontSize="14" RenderTransformOrigin="0.49,0.707"/>
                                <ScrollViewer HorizontalAlignment="Left" Background="White" Height="125"  Margin="12,80,0,-280"  Width="200" VerticalScrollBarVisibility="Visible">
                                    <TextBox x:Name="meals_box" IsReadOnly ="True"  HorizontalAlignment="Left" Text="{Binding Meals}"  Width="200" Height="125" Margin="0,0,0,0"/>
                                </ScrollViewer>
                            </Grid>
                        </StackPanel>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
