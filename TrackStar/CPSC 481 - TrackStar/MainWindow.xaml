<Window x:Class="CPSC_481___TrackStar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC_481___TrackStar"
        mc:Ignorable="d"
        Title="MainWindow" Height="670" Width="570">
    <Grid Background="#FF00FAFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Sleep Tracker" Grid.Column="1" HorizontalAlignment="Left" Margin="47,402,0,0" VerticalAlignment="Top" Click="Button_Click_1" Height="64" Width="138" RenderTransformOrigin="0.5,0.523" Background="Red" Foreground="White"/>
        <Button Content="View Today's Workout" Grid.Column="1" HorizontalAlignment="Left" Margin="47,310,0,0" VerticalAlignment="Top" Click="Button_Click_1" Height="64" Width="138" RenderTransformOrigin="0.5,0.523" Background="Red" Foreground="White"/>
        <Rectangle Grid.Column="1" Margin="258,283,26,0" Stroke="Black" Fill="White" Height="285" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="332,310,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.563,0.687" Height="31" Width="130" FontSize="20"><Run Language="en-ca" Text="  "/><Run Text="Main Target"/></TextBlock>
        <Rectangle Grid.Column="1" HorizontalAlignment="Center" Height="143" Margin="0,122,0,0" Stroke="Black" VerticalAlignment="Top" Width="502" Fill="White"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Margin="0,122,0,0" Text="Program Completion" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Height="27" Width="180" RenderTransformOrigin="0.503,0.581"/>
        <ProgressBar x:Name="completionBar" HorizontalAlignment="Center" Height="36" Margin="0,176,0,0" VerticalAlignment="Top" Width="198" Grid.Column="1" />
        <Image Margin="175,23,175,556" Stretch="Fill" Source="Screenshot 2021-10-08 185710.png" Grid.Column="1"/>

        <Button  HorizontalAlignment="Left" Margin="0,593,0,0" VerticalAlignment="Top" Height="61" Width="115" Grid.Column="1">
            <Image x:Name="mealBtn" Source="diet-icon-24.jpg"></Image>
        </Button>

        <Button HorizontalAlignment="Left" Margin="115,593,0,0" VerticalAlignment="Top" Height="61" Width="114" Grid.Column="1">
            <Image x:Name="goalsBtn" Source="target_icon.jpg" Width="126"></Image>
        </Button>

        <Button HorizontalAlignment="Left" Margin="229,593,0,0" VerticalAlignment="Top" Height="61" Width="115" RenderTransformOrigin="0.724,0.419" Grid.Column="1" Click="Home_Button_Click">
            <Image x:Name="homeBtn" Source="Home_Icon.svg.png" Width="105" RenderTransformOrigin="0.514,0.601"></Image>
        </Button>

        <Button HorizontalAlignment="Left" Margin="342,593,0,0" VerticalAlignment="Top" Height="61" Width="115" Grid.Column="1" Click="Cat_Button_Click">
            <Image x:Name="catBtn" Source="Catalogue_icon.png" Width="99"></Image>
        </Button>

        <Button HorizontalAlignment="Left" Margin="456,593,0,0" VerticalAlignment="Top" Height="61" Width="114" Grid.Column="1">
            <Image x:Name="infoBtn" Source="personal_info_icon.png"></Image>
        </Button>

    </Grid>
</Window>
